<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="main_button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/md_black_1000</item>
        <item name="android:textSize">15dp</item>
        <item name="backgroundTint">@color/md_grey_200</item>
        <item name="cornerRadius">20dp</item>
    </style>



    <style name="add_user_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="add_user_textedit">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">3</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:textSize">20dp</item>
        <item name="android:paddingLeft">10dp</item>
    </style>

    <style name="purchase_textview">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginTop">30dp</item>
    </style>

    <style name="purchase_edittext">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">2</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:textSize">20dp</item>
        <item name="android:paddingLeft">10dp</item>
    </style>

    <style name="add_customer_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">2</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="backgroundTint">@color/md_grey_200</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="purchase_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="backgroundTint">@color/md_grey_200</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="canvas_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="backgroundTint">@color/md_grey_200</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="bill_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="backgroundTint">@color/md_grey_200</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_marginTop">230dp</item>
        <item name="android:layout_marginBottom">45dp</item>
    </style>
</resources>